               ixy = "0.000000"
               ixz="0.000000"
               iyy="0.000244"
               iyz="0.000000"
               izz="0.000244"/>
    	</inertial>
	</link>

	<link name = "right_wheel_link">
		<visual>
			<origin xyz = "0 0 0.05" rpy = "0 -1.57 0" />
