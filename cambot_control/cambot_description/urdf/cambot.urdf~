      		<inertia ixx = "0.001002"
               ixy = "0.000000"
               ixz="0.000013"
               iyy="0.001521"
               iyz="0.000000"
               izz="0.001247"/>
    	</inertial>
	</link>

	<joint name = "servo_to_camera_support" type = "revolute">
		<limit effort="10.0" lower="-0.4" upper="0.4" velocity="0.5"/>
		<parent link = "servo_link" />
		<child link = "camera_support_link" />
		<origin xyz = "0 0 0" rpy = "0 0 0" />
		<axis xyz = "0 0 1" />
	</joint>

	<!-- CAMERA-SUPPORT-LINK -->
